@model IEnumerable<AR_IS.Models.Customer>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Customer")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i> Create New</a>
            <div id="mydiv" class="col-md-3">
                <p class="text-center bg-success">@TempData["Reg"]</p>
            </div>
            <div id="mydiv1" class="col-md-3">
                <p class="text-center bg-danger">@TempData["Reg1"]</p>
            </div>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>Customer Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr style="background-color:#2196F3;color:white">
                                            <th>Account No</th>
                                            <th>Image</th>
                                            <th>Customer Name</th>
                                            <th>CNIC</th>
                                            <th>Phone1</th>

                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Account No</th>
                                            <th>Image</th>
                                            <th>Customer Name</th>
                                            <th>CNIC</th>
                                            <th>Phone1</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst_Customer in Model)
                                        {
                                        <tr>
                                            <td>@lst_Customer.AccountNo</td>
                                            @if (lst_Customer.Image == null || lst_Customer.Image == "'NULL'" || lst_Customer.Image == "")
                                            {
                                                <td style="width:30px; text-align:center;"><img src="~/Content/Image/Demo.png" width="50" height="50" class="img-thumbnail" /></td>
                                            }
                                            else
                                            {
                                                <td style="width:30px; text-align:center;"><img src="~/uploads/@lst_Customer.Image" width="50" height="50" class="img-thumbnail" /></td>
                                            }
                                            <td>@lst_Customer.Name</td>
                                            <td>@lst_Customer.CNIC</td>
                                            <td>@lst_Customer.Phone1</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = lst_Customer.AccountNo })" new { onclick="return confirm('Are you sure you want to Edit this Customer?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>
                                                <a href="@Url.Action("Delete", new {id = lst_Customer.AccountNo} )" new { onclick="return confirm('Are you sure you want to Delete this Customer?');" data-toggle="tooltip" data-placement="left" title="Click Me To Delete" class="badge badge-danger b-rounded"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>
<script>
    setTimeout(function () {
        $('#mydiv1').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>











