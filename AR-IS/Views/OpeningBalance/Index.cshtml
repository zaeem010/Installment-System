@model IEnumerable<AR_IS.Models.ThirdLevel>
@{
    ViewBag.Title = "Index";
    var sr = 0;
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            @*<a href="@Url.Action("OpenBalance","OpeningBalance")" class="btn btn-skype offset-lg-10"><i class="fa fa-plus"></i>Add Opening Balance</a>*@
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Opening Balance Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Sr</th>
                                            <th>Account Name</th>
                                            <th>Dr</th>
                                            <th>Cr</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Sr</th>
                                            <th>Account Name</th>
                                            <th>Dr</th>
                                            <th>Cr</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody class="abc">
                                        @foreach (var item in Model)
                                        {
                                            sr += 1;
                                            <tr>
                                                <td>@sr</td>
                                                <td>@item.AccountTitle</td>
                                                <td>@item.Dr</td>
                                                <td>@item.Cr</td>
                                                <td>
                                                    <a href="@Url.Action("OpenBalance", new { ID= item.AccountNo } )" new { onclick="return confirm('Are you sure you want to Edit this record?');" class="badge badge-primary"><i class="fa fa-pencil"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


