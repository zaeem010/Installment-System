@model IEnumerable<AR_IS.ViewModelQuery.ProductVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Product")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Product Tables</u></h5>
                            </div>
                            <div class="card-block">
                                @if (TempData["Reg"] != null)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>

                                                <div class="alert-message">
                                                    <span>@TempData["Reg"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>

                                            <th>Id</th>
                                            <th>Product </th>
                                            <th>Cost Price </th>
                                            <th>Sale Price </th>
                                            <th>Pieces In Box </th>
                                            <th>Status </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>

                                            <th>Id</th>
                                            <th>Product </th>
                                            <th>Cost Price </th>
                                            <th>Sale Price </th>
                                            <th>Item Unit </th>
                                            <th>Status </th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst_Product in Model)
                                        {
                                            <tr>

                                                <td>@lst_Product.Id</td>
                                                <td>@lst_Product.Iname</td>
                                                <td>@lst_Product.Cprice</td>
                                                <td>@lst_Product.Sprice</td>
                                                <td>@lst_Product.Itemunit</td>
                                                @if (lst_Product.Status == "Active")
                                                {
                                                    <td>
                                                        <span class="badge badge-success" style="font-size:15px"> @lst_Product.Status</span>

                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <span class="badge badge-warning" style="font-size:15px"> @lst_Product.Status</span>

                                                    </td>
                                                }

                                                <td>
                                                    @if (lst_Product.Status == "Active")
                                                    {
                                                        <a href="@Url.Action("Status", new { id = lst_Product.Id  , Status = "Deactive"})" new { onclick="return confirm('Are you sure you want to Deactive this Product?');" class="badge badge-danger" data-toggle="tooltip" data-placement="left" title="Click Me to Deactive"><i class="fa fa-times"></i></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@Url.Action("Status", new { id = lst_Product.Id  , Status = "Active" })" new { onclick="return confirm('Are you sure you want to Active this Product?');" class="badge badge-success" data-toggle="tooltip" data-placement="left" title="Click Me To Active"><i class="fa fa-check"></i></a>
                                                    }
                                                    <a href="@Url.Action("Edit", new { id = lst_Product.Id })" new { onclick="return confirm('Are you sure you want to Edit this Product?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>

                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.chosen-select').chosen();
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds

</script>










