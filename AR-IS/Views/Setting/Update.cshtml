@model AR_IS.Models.Setting
@{
    ViewBag.Title = "Update";
}
<style>

    hr.new2 {
        color: dodgerblue;
        border-top: 4px dotted;
    }

    input {
        height: 37px
    }
</style>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            @*<a href="@Url.Action("Index","Student")" class="btn btn-skype offset-lg-10"><i class="fa fa-list"></i> Student List</a>*@
            <div class="card" style="margin-top:20px">
                
                <div class="card-block">
                    @using (Html.BeginForm("Save", "Setting", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <span id="uname_response"></span>
                        <div class="card-header">
                            <h5 class="card-header-text"><b><u class="size">Company Informations</u></b></h5>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Logo:</label>
                                <div>
                                    <img id="user_img" height="80" width="90" src="~/uploads/@Model.Logo" style="border:thin;margin-left:5px" class="img-fluid" />
                                    <br />
                                    <label for="file" class="custom-file">
                                        <input type="file" name="img" id="file" accept="image/*" onchange="preview_image(event)" class="form-control input-xs custom-file-input" style="width:2500px" />
                                        <span class="custom-file-control"></span>
                                    </label>
                                </div>

                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-6 ">
                                <br />
                                <label>Company Name:</label>
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="fa fa-bank"></i></span>
                                    @Html.TextBoxFor(m => m.Companyname, new { @class = "form-control thresold-i ", @type = "text", @required = "required", autocomplete = "off" })
                                </div>
                            </div>
                            <br />
                            <div class="col-md-6">

                                <label>Landline Number:</label>
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="fa fa-phone-square"></i></span>
                                    @Html.TextBoxFor(m => m.Landline, new { @class = "form-control phone", @type = "number", autocomplete = "off", min = "0", max = "" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <label> Phone:</label>
                                <br />
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="fa fa-phone-square"></i></span>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control phone", @type = "number", autocomplete = "off", min = "0", max = "" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <label>Address:</label>
                                <br />
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="fa fa-paper-plane-o"></i></span>
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control thresold-i ", @type = "text", autocomplete = "off", })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <label>Company Email:</label>
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="icofont icofont-email"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control phone", @type = "email", autocomplete = "off", min = "0", max = "" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <label>Txt % :</label>
                                <br />
                                <div class="input-group">
                                    <span class="input-group-addon" id="alighaddon1"><i class="fa fa-paper-plane-o"></i></span>
                                    @Html.TextBoxFor(m => m.GST, new { @class = "form-control thresold-i ", @type = "number", autocomplete = "off", })
                                </div>
                            </div>
                        </div>
                        <div class=" col-md-4 ">
                            <br />
                            <button type="submit" id="submit" class="btn btn-primary pull-left"><i class="icofont icofont-ui-check"></i>   Update</button>
                        </div>
                        @Html.HiddenFor(m => m.Id)
                    }
                </div>
                    </div>

        </div>

    </div>

</div>
<!--/end-->
<!--Image Previewr-->
<script type="text/javascript">
    function preview_image(event) {
        var reader = new FileReader();
        reader.onload = function () {
            var output = document.getElementById('user_img');
            output.src = reader.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    };
