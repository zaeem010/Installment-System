@model AR_IS.ViewModel.SaleWTCVM
@{
    ViewBag.Title = "New";
}
<script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/jquery.inputmask.bundle.js"></script>
<style>
    hr.new2 {
        color: #2196F3;
        border-top: 4px dotted;
    }

    select:invalid {
        height: 6px !important;
        opacity: 0 !important;
        position: absolute !important;
        display: flex !important;
        width: 400px;
    }

        select:invalid[multiple] {
        }
</style>
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("Index","SaleWTC")" class="btn btn-primary pull-right" data-toggle="tooltip" style="margin-left:20px"><i class="fa fa-list"></i> Invoice List</a>
            <button class="btn btn-primary pull-right" data-toggle="modal" title="Click Me To View" data-target="#recent1"><i class="fa fa-list"></i> Recent Invoice List</button>
            <br />
            <div class="card" style="margin-top:20px">
                <div class="card-header text-center">
                    <h3 class="text-primary-color"><u><b>Sale Invoice</b></u></h3>
                </div>
                <div class="card-block">
                    @if (TempData["Reg"] != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>

                                    <div class="alert-message">
                                        <span>@TempData["Reg"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @if (TempData["Reg1"] != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert">&times;</button>

                                    <div class="alert-message">
                                        <span>@TempData["Reg1"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @using (Html.BeginForm("Save", "SaleWTC", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-header">
                            <h5 class="card-header-text text-primary-color"><b><u class="size">Invoice Info</u></b></h5>
                        </div>
                        <div class="col-md-2">
                            <label>Inv No </label>
                            @Html.TextBoxFor(m => m.SaleMaster.Invid, new { @class = "form-control thresold-i", @placeholder = "", @readonly = "off" })
                        </div>
                        <div class="col-md-5">
                            <label>Inv Date </label>&nbsp;<i class="fa fa-asterisk text-danger"></i>
                            @Html.TextBoxFor(m => m.SaleMaster.Date, new { @class = "form-control thresold-i", @placeholder = "", @type = "date", id = "Date" })
                        </div>
                        <div class="col-md-5">
                            <label><b>Select Customer</b> &nbsp;</label><i class="fa fa-asterisk text-danger"></i>&nbsp;&nbsp;<a class="badge badge-success" data-toggle="modal" title="Click Me To Add New" href="#addCustomer" @*data-target="#addCustomer"*@><i class="fa fa-plus" style="color:white"></i></a>
                            @Html.DropDownListFor(m => m.SaleMaster.AccountNo, new SelectList(Model.Cus_list, "AccountNo", "Name"), "Select Customer", htmlAttributes: new { @class = "form-control input-xs chosen-select", @required = "true" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Remarks For Related Invoice </label>
                            @Html.TextAreaFor(m => m.SaleMaster.Address, new { @class = "form-control thresold-i", rows = 2, columns = 5 })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Cargo  &nbsp;<a class="badge badge-success" data-toggle="modal" title="Click Me To Add New" data-target="#addCargo"><i class="fa fa-plus" style="color:white"></i></a> </label>
                            @Html.DropDownListFor(m => m.SaleMaster.CargoId, new SelectList(Model.Cargo_list, "Id", "Name"), "Select Cargo", htmlAttributes: new { @class = "form-control input-xs chosen-select" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Cargo Number </label>
                            @Html.TextBoxFor(m => m.SaleMaster.Phone, new { @class = "form-control thresold-i", @type = "number", @autocomplete = "off" })
                        </div>
                        <div class="col-md-12">
                            <hr class="new2">
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card-header">
                                    <h5 class="card-header-text"><b><u class="size text-primary-color">Item Info</u></b></h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <input class="form-control" autocomplete="off" id="ProductID" readonly type="hidden">
                            <input class="form-control" autocomplete="off" id="Itemunit" value="0" type="hidden">
                            <a class="btn btn-wide btn-danger pull-right" data-toggle="modal" title="Click Me To View" data-target="#recent" style="margin-top:25px"><i class="fa fa-search-plus"></i></a>
                        </div>
                        <div class="col-md-2">
                            <label>Name</label>&nbsp;<i class="fa fa-asterisk text-danger"></i>
                            <input class="form-control" autocomplete="off" id="ProductName" readonly type="text">
                        </div>
                        <div class="col-md-2">
                            <label>CTN</label>
                            <input class="form-control" autocomplete="off" id="ctn" value="0" onkeyup="getPrice()" type="number" onkeypress="return /[0-9a-zA-Z]/i.test(event.key)">
                        </div>
                        <div class="col-md-2">
                            <label>Qty</label>
                            <input class="form-control" autocomplete="off" id="qty" value="0" onkeyup="getPrice()" type="number" onkeypress="return /[0-9a-zA-Z]/i.test(event.key)">
                        </div>
                        <div class="col-md-1">
                            <label>SP</label>&nbsp;<i class="fa fa-asterisk text-danger"></i>
                            <input class="form-control" autocomplete="off" id="sp" value="0" onkeyup="getPrice()" type="text">
                        </div>
                        <div class="col-md-2">
                            <label>Net Total</label>
                            <input readonly class="form-control" autocomplete="off" type="text" id="nettotal">
                        </div>
                        <div class="col-md-1 ">
                            <button style="margin-top:28px ;background-color:#4cff00" type="button" onclick='abc()' class="btn"><i class="fa fa-plus"></i></button>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <br />
                            <table id="invoiceItem" class="mb-0 table table-sm table-bordered table-hover" style="">
                                <tr style="background-color:#2196F3;color:white">
                                    <th>Action</th>
                                    <th style="display:none">ID</th>
                                    <th>Name</th>
                                    <th style="display:none">Item Unit</th>
                                    <th>CTN</th>
                                    <th>Qty</th>
                                    <th>SP</th>
                                    <th>Net Total</th>
                                </tr>
                                @if (Model.SaleMaster.Id == 0)
                                {
                                    <tbody>
                                    </tbody>
                                }
                                else
                                {
                                    <tbody>
                                        @foreach (var lst in Model.SaleDetail_list)
                                        {
                                            <tr>

                                                <td style="width:80px !important"><a style=color:white;background-color:red; class=badge badge-warning onclick=deleteRow(this)><i class="fa fa-trash-o"></i></a>&nbsp;<a class="badge badge-primary" onclick="return ShowEditModal(this)"><i class="fa fa-pencil"></i></a></td>

                                                <td style="display:none"><input type="text" name="prid[]" value="@lst.Itemid" readonly Class="form-control" /></td>

                                                <td><input type="text" name="productname[]" value="@lst.ItemName" readonly Class="form-control" /></td>

                                                <td style="display:none"><input type="text" name="itemunit[]" value="@lst.ItemUnit" readonly Class="form-control total" /></td>

                                                <td><input type="text" name="ctn[]" value="@lst.CTN"  readonly Class="form-control total" /></td>

                                                <td><input type="text" name="qty[]" value="@lst.Qty" readonly Class="form-control total" /></td>

                                                <td><input type="text" name="saleprice[]" value="@lst.SP" readonly Class="form-control total" /></td>

                                                <td><input type="text" name="nettotal[]" value="@lst.NetTotal" readonly Class="form-control total" /></td>

                                                <td style="display:none">@lst.Itemid</td>

                                                <td style="display:none">@lst.ItemName</td>

                                                <td style="display:none">@lst.ItemUnit</td>

                                                <td style="display:none">@lst.CTN</td>

                                                <td style="display:none">@lst.Qty</td>

                                                <td style="display:none">@lst.SP</td>

                                                <td style="display:none">@lst.NetTotal</td>
                                            </tr>
                                        }
                                    </tbody>
                                }

                            </table>
                        </div>
                        <div class="col-md-12">
                            <hr class="new2">
                        </div>
                        <div class="card-header">
                            <h5 class="card-header-text"><b><u class="size text-primary-color">Payment Info</u></b></h5>
                        </div>
                        <div class="col-md-3">
                            <br />
                            <label>Total </label>
                            @Html.TextBoxFor(m => m.SaleMaster.Total, new { @class = "form-control thresold-i", @placeholder = "", @readonly = "only", id = "total" })
                        </div>
                        <div class="col-md-3">
                            <br />
                            <label>Cargo Charges </label>
                            @Html.TextBoxFor(m => m.SaleMaster.CargoCharges, new { @class = "form-control thresold-i", @placeholder = "", onkeyup = "gt()", @type = "number", id = "cgo_charges", @autocomplete = "off" })
                        </div>
                        <div class="col-md-3">
                            <br />
                            <label>Grand Total</label>
                            @Html.TextBoxFor(m => m.SaleMaster.GrandTotal, new { @class = "form-control thresold-i", @placeholder = "", @readonly = "only", id = "granttotal" })
                        </div>
                        <div class="col-md-3">
                            <br />
                            <label>Discount</label>
                            @Html.TextBoxFor(m => m.SaleMaster.DiscountAmount, new { @class = "form-control thresold-i", @placeholder = "", onkeyup = "gt()", @type = "number", id = "dis", @autocomplete = "off" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Net Total</label>

                            @Html.TextBoxFor(m => m.SaleMaster.NetAmount, new { @class = "form-control thresold-i", @placeholder = "", @readonly = "", id = "grantnettotal" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Received Amount</label>
                            @Html.TextBoxFor(m => m.SaleMaster.Rtotal, new { @class = "form-control thresold-i", @placeholder = "", onkeyup = "gt()", id = "Paidtotal", @type = "number", @autocomplete = "off" })
                        </div>
                        <div class="col-md-4">
                            <br />
                            <label>Balance Total</label>
                            @Html.TextBoxFor(m => m.SaleMaster.BTotal, new { @class = "form-control thresold-i", @placeholder = "", @type = "number", id = "BalanceTotal", @readonly = "true" })
                        </div>
                        <div class="col-md-10" style="margin-left: 370px; margin-top: 20px">
                            @if (Model.SaleMaster.Id == 0)
                            {
                                <button type="submit" class="btn btn-primary  col-sm-4 col-sm-offset-12" style="margin-top:10px" onclick="return confirm('Do you want to Save ..')"><i class="fa fa-paste f-20"></i> &nbsp; Save Invoice</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary  col-sm-4 col-sm-offset-12" style="margin-top:10px" onclick="return confirm('Do you want to Update ..')"><i class="fa fa-paste f-20"></i> &nbsp; Update Invoice</button>
                            }

                        </div>
                        @Html.HiddenFor(m => m.SaleMaster.Id)
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
    //This Function call The Addition of Rows
    function abc() {
        //Appending the Colums By Same Id
        var productid = document.getElementById("ProductID").value;
        var productname = document.getElementById("ProductName").value;
