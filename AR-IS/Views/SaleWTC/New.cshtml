        document.getElementById("grantnettotal").value = t_f.toFixed(2);
        document.getElementById("BalanceTotal").value = t_f.toFixed(2);
        var dis = parseFloat(document.getElementById("dis").value || 0);
        var t_f1 = parseFloat(t_f - dis);
        document.getElementById("grantnettotal").value = t_f1.toFixed(2);;
        document.getElementById("BalanceTotal").value = t_f1.toFixed(2);
        var bal = parseFloat(document.getElementById("Paidtotal").value || 0);
        var t_f2 = parseFloat(t_f1 - bal);
        document.getElementById("BalanceTotal").value = t_f2.toFixed(2);


    };
</script>
<script>
    function getPrice() {
        var numval1 = parseFloat(document.getElementById("ctn").value || 0);
        var numval2 = parseFloat(document.getElementById("Itemunit").value || 0);
        var t_f = parseFloat(numval1).toFixed(2) * parseFloat(numval2).toFixed(2);
        if (!isNaN(t_f)) {
            document.getElementById("nettotal").value = t_f.toFixed(2);
        }
        var numval3 = parseFloat(document.getElementById("qty").value || 0);
        var t_f1 = parseFloat(t_f) + parseFloat(numval3);
        if (!isNaN(t_f1)) {
            document.getElementById("nettotal").value = t_f1.toFixed(2);
        }
        var numval4 = (document.getElementById("sp").value || 0);
        var t_f2 = parseFloat(t_f1) * parseFloat(numval4);
        if (!isNaN(t_f2)) {
            document.getElementById("nettotal").value = t_f2.toFixed(2);
        }
    };
</script>
<script>
    $('.chosen-select').chosen();
    $(document).ready(function () {
        var now = new Date();
        var month = (now.getMonth() + 1);
        var day = now.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;
        var today = now.getFullYear() + '-' + month + '-' + day;

        $('#Date').val(today);
    });
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000);
</script>
<script>
     function Action(id) {
        $.ajax({
            url: '@Url.Action("Action", "SaleWTC")',
            type: "POST",
            data: { "id": id },
        "success": function (data) {
        if (data != null) {
            var vdata = data;
            $("#ProductID").val(vdata[0].Id);
            $("#ProductName").val(vdata[0].Iname);
            $("#sp").val(vdata[0].Sprice);
            $("#Itemunit").val(vdata[0].Itemunit);
            $('#qty').val('0');
            $('#ctn').val('0');
            $('#nettotal').val('0');
        }
    }
});
    }
    
</script>
<div class="modal fade" id="addCustomer">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header" style="background-color:#2196F3">
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span style="color:white" aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title text-center" style="color:white">Register Customer</h4>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                @using (Html.BeginForm("Save_cus", "SaleWTC", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <span id="uname_response"></span>
                    @Html.AntiForgeryToken()

            <div class="row">
                <div class="card-header  ">
                    <h5 class=" text-primary "><u><b>Personal Information</b></u></h5>
                </div>
                <div class="col-md-3">
                    <label> Customer Name(Ledger)</label>&nbsp;<i class="fa fa-asterisk text-danger"></i>
                    @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control thresold-i ", @required = "required", autocomplete = "off" })
                </div>
