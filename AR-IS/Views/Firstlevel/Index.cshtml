@model IEnumerable<AR_IS.ViewModelQuery.FirstlevelVMQ>
@{
    ViewBag.Title = "Index";
}

<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">

        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Firstlevel")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>First Level Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>

                                            <th>Sr</th>
                                            <th>Account Head</th>
                                            <th>Sub Head</th>
                                            <th>Account No </th>
                                            <th>Action </th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>

                                            <th>Sr</th>
                                            <th>Account Head</th>
                                            <th>Sub Head</th>
                                            <th>Account No </th>
                                            <th>Action </th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{int sr = 0; }
                                        @foreach (var lst in Model)

                                        {
                                        <tr>
                                            <td style="width:90px; ">@{ sr++;}@sr</td>
                                            <td style="width:90px; ">@lst.Head_Name</td>
                                            <td style="width:90px; ">@lst.AccountTitle</td>
                                            <td style="width:90px; ">@lst.AccountNo</td>
                                            @if (lst.AccountNo == 1001 || lst.AccountNo == 2001 || lst.AccountNo == 4001 || lst.AccountNo == 5001 || lst.AccountNo == 5002)
                                            {
                                                <td style="width:90px;">

                                                </td>
                                            }
                                            else
                                            {
                                                <td style="width:90px;">  <a href="@Url.Action("Edit", new { id = lst.Id })" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a></td>
                                            }



                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>




