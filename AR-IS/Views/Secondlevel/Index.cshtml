@model IEnumerable<AR_IS.ViewModelQuery.SecondLevelVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Secondlevel")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New </a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>Second Level Tables </u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Sr</th>
                                            <th>Account Head</th>
                                            <th>Account Sub  Head</th>
                                            <th>Second Level Account</th>
                                            <th>Account ID</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>

                                            <th>Sr</th>
                                            <th>Account Head</th>
                                            <th>Account Sub  Head</th>
                                            <th>Second Level Account</th>
                                            <th>Account ID</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{int sr = 0; }
                                        @foreach (var lst in Model)

                                        {

                                        <tr>
                                            <td style="width:90px; ">@{ sr++;}@sr</td>
                                            <td style="width:90px; ">@lst.Head_Name</td>
                                            <td style="width:90px; ">@lst.AccountName</td>
                                            <td style="width:90px; ">@lst.AccountTitle</td>
                                            <td style="width:90px; ">@lst.AccountNo</td>

                                            @if (lst.AccountNo == 1000001 || lst.AccountNo == 1000002 || lst.AccountNo == 2000001 || lst.AccountNo == 4000001 || lst.AccountNo == 1000003 || lst.AccountNo == 1000004 || lst.AccountNo == 5000001 || lst.AccountNo == 5000002 || lst.AccountNo == 5000003 || lst.AccountNo == 5000004)
                                            {
                                                <td>
                                                </td>
                                            }
                                            else
                                            {
                                                <td style="width:90px; "><a href="@Url.Action("Edit", new { id= lst.Id } )" data-toggle="tooltip" data-placement="right" title="Click Me To Edit" class="badge badge-primary b-rounded"><i class="fa fa-pencil"></i></a></td>
                                            }

                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




