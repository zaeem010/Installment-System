@model IEnumerable<AR_IS.Models.Supplier>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Supplier")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Supplier Tables</u></h5>
                            </div>
                            <div class="card-block">
                                @if (TempData["Reg"] != null)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                
                                                <div class="alert-message">
                                                    <span>@TempData["Reg"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Account No</th>
                                            <th>Supplier Name(Ledger)</th>
                                            <th>Company Name</th>
                                            <th>Phone</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Account No</th>
                                            <th>Supplier Name</th>
                                            <th>Company Name</th>
                                            <th>Phone</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst_Supplier in Model)
                                        {

                                        <tr>
                                            <td>@lst_Supplier.AccountNo</td>
                                            <td>@lst_Supplier.Name</td>
                                            <td>@lst_Supplier.Comname</td>
                                            <td>@lst_Supplier.Phone</td>
                                            @if (lst_Supplier.AccountNo == 2100001)
                                            {
                                                <td></td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a href="@Url.Action("Edit", new { id = lst_Supplier.AccountNo })" new { onclick="return confirm('Are you sure you want to Edit this Supplier?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>
                                                </td>
                                            }

                                        </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); 
</script>










