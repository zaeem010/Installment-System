@model IEnumerable<AR_IS.Models.GeneralUser>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            @*<a href="@Url.Action("New","Customer")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i> Create New</a>*@
            <div id="mydiv" class="col-md-3">
                <p class="text-center bg-success">@TempData["Reg"]</p>
            </div>
            <div id="mydiv1" class="col-md-3">
                <p class="text-center bg-danger">@TempData["Reg1"]</p>
            </div>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>User Detail Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr style="background-color:#2196F3;color:white">
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Reg Date</th>
                                            <th>Exp Date</th>
                                            <th>Remaining Day</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>UserName</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Reg Date</th>
                                            <th>Exp Date</th>
                                            <th>Remaining Day</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                        <tr>
                                            <td>@lst.UserName</td>
                                            <td>@lst.Email</td>
                                            <td>@lst.Phone</td>
                                            <td>@lst.RegDate.ToString("dd-MMM-yyyy ")</td>
                                            <td>@lst.ExpDate.ToString("dd-MMM-yyyy")</td>
                                            <td>@lst.ExpDate.AddDays(1).Subtract(DateTime.Now).Days</td>
                                            
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = lst.Id })" new { onclick="return confirm('Are you sure you want to Edit this User ?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>

                                            </td>
                                        </tr>

                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>
<script>
    setTimeout(function () {
        $('#mydiv1').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>












