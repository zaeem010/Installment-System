@model AR_IS.ViewModel.ReportsVM
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            @*<a href="@Url.Action("Index","Category")" class="btn btn-primary offset-lg-10"><i class="fa fa-list"></i> Categories</a>*@
            <div id="mydiv" class="col-md-3">
                <p class="text-center bg-success">@TempData["Reg"]</p>
            </div>
            <div class="card" style="margin-top:20px">
                <div class="card-header">
                    <h5 class="card-header-text"><u><b>Expense Report </b></u></h5>
                </div>
                <div class="card-block">
                    @using (Html.BeginForm("Print", "MonthlyExpense", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-4">
                                <label>Select Month</label>
                                <input type="month" name="month" required value="" class="form-control" />
                            </div>
                            <br />
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary " style="margin-top:30px"><i class="fa fa-search"></i>&nbsp; Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>












