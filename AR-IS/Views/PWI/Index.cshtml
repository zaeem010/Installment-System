@model IEnumerable<AR_IS.ViewModelQuery.PWIVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","PWI")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            <div id="mydiv" class="col-md-3">
                <p class="text-center bg-success">@TempData["Reg"]</p>
                <p class="text-center bg-danger">@TempData["Reg"]</p>
            </div>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>Purchase Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Inv No</th>
                                            <th>Date </th>
                                            <th>Supplier </th>
                                            <th>Vehicle </th>
                                            <th>Net Total </th>
                                            <th>Advanced Total </th>
                                            <th>Balance Total </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Inv No</th>
                                            <th>Date </th>
                                            <th>Supplier </th>
                                            <th>Vehicle </th>
                                            <th>Net Total </th>
                                            <th>Advanced Total </th>
                                            <th>Balance Total </th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @lst.Invid

                                                </td>
                                                <td>
                                                    @Convert.ToDateTime(lst.Date).ToString("dd MMM yyyy")

                                                </td>
                                                <td>
                                                    @lst.Name

                                                </td>
                                                <td>
                                                    <a href="@Url.Action("InstallmentDetail", new { Invid = lst.Invid })" style="background-color:white;color:black"><b><i class="fa fa-bicycle"></i></b><u>@lst.VehicleName-@lst.EngineNo</u></a>
                                                </td>
                                                <td>
                                                    @lst.WithGSTTotal

                                                </td>
                                                <td>
                                                    @lst.AdvancePayment

                                                </td>
                                                <td>
                                                    @lst.BalanceTotal

                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Edit", new { Invid = lst.Invid })" new { onclick="return confirm('Are you sure you want to Edit this Invoice?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>

                                                    <a href="@Url.Action("Print", new {Invid = lst.Invid})" target="_blank" class="badge badge-warning" data-toggle="tooltip" data-placement="left" title="Click Me To Print"><i class="ion-printer"></i> </a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>
























