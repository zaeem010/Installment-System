@model IEnumerable<AR_IS.ViewModelQuery.ThirdLevelVMQ>
@{
    ViewBag.Title = "Index";
    var sr = 0;
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","Thirdlevel")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Third Level Tables</u></h5>
                            </div>
                            <div class="card-block">
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Sr</th>
                                            <th>Account Head </th>
                                            <th>First Level Account </th>
                                            <th>Second Level Account </th>
                                            <th>Third Level Account </th>
                                            <th>Account ID </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Sr</th>
                                            <th>Account Head </th>
                                            <th>First Level Account </th>
                                            <th>Second Level Account </th>
                                            <th>Third Level Account </th>
                                            <th>Account ID </th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            sr += 1;
                                        <tr>
                                            <td>@sr</td>
                                            <td>@item.Head_Name</td>
                                            <td>@item.FirstAccountTitle</td>
                                            <td>@item.SecondAccountTitle</td>
                                            <td>@item.AccountTitle</td>
                                            <td>@item.AccountNo</td>
                                            @if (item.AccountNo == 1100001 || item.AccountNo == 4400001 || item.AccountNo == 5500001 || item.AccountNo == 5500002 || item.AccountNo == 1100002 || item.AccountNo == 5500003 || item.AccountNo == 5500004 || item.AccountNo == 5500005)
                                            {

                                                <td>
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <a href="@Url.Action("Edit", new { Id= item.Id } )" new { onclick="return confirm('Are you sure you want to Edit this record?');" class="badge badge-primary"><i class="fa fa-pencil"></i></a>
                                                </td>
                                            }
                                        </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


