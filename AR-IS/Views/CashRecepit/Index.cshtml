@model IEnumerable<AR_IS.Models.TranscationDetail>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">

    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="main-header">
            </div>
        </div>
        <div class="col-lg-12">
            <a href="@Url.Action("New","CashRecepit")" class="btn btn-primary pull-right" data-toggle="tooltip" title="Click Me To Add" style="margin-left:20px"><i class="fa fa-plus"></i> Create new Invoice</a>
            <br />
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-header-text"><u>Cash Receipt Voucher</u></h5>
                            </div>
                            <div class="card-block">
                                @if (TempData["Reg"] != null)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>

                                                <div class="alert-message">
                                                    <span>@TempData["Reg"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (TempData["Reg1"] != null)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div id="mydiv" class="alert alert-danger alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>

                                                <div class="alert-message">
                                                    <span>@TempData["Reg1"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>V-No</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Remarks</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>V-No</th>
                                            <th>Date</th>
                                            <th>Amount</th>
                                            <th>Remarks</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody class="abc">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.V_No</td>
                                                <td>@item.TransDate</td>
                                                <td>@item.Dr</td>
                                                <td>@item.TransDes</td>
                                                <td>
                                                    <a href="@Url.Action("Delete", new { id= item.V_No } )" onclick="return confirm('Are you sure you want to delete this record?');" data-toggle="tooltip" data-placement="left" title="Click Me To Delete" class="badge badge-danger b-rounded"><i class="fa fa-trash-o"></i></a>
                                                    <a href="@Url.Action("Edit", new { id= item.V_No } )" data-toggle="tooltip" data-placement="right" title="Click Me To Edit" class="badge badge-primary b-rounded" onclick="return confirm('Are you sure you want to Edit this record?');"><i class="fa fa-pencil"></i></a>
                                                    <a href="@Url.Action("Report", new { id= item.V_No} )" target="_blank" class="badge badge-warning b-rounded"><i class="fa fa-print"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Main content ends -->
    <!-- Container-fluid ends -->
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>