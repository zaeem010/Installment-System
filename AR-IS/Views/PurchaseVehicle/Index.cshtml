@model IEnumerable<AR_IS.ViewModelQuery.PurchaseWVehicleVMQ>
@{
    ViewBag.Title = "Index";
}
<div class="content-wrapper">
    <!-- Container-fluid starts -->
    <!-- Main content starts -->
    <div class="container-fluid">
        <div class="col-lg-12">
            <br />
            <a href="@Url.Action("New","PurchaseVehicle")" class="btn btn-primary offset-lg-10"><i class="fa fa-plus"></i>Create New</a>
            
            <div class="card" style="margin-top:20px">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">

                            <div class="card-header">
                                <h5 class="card-header-text"><u>Purchase Tables</u></h5>
                            </div>
                            <div class="card-block">
                                @if (TempData["Reg"] != null)
                                {
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div id="mydiv" class="alert alert-success alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>

                                                <div class="alert-message">
                                                    <span>@TempData["Reg"]</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <table id="advanced-table" class="table dt-responsive table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>Inv No</th>
                                            <th>Date </th>
                                            <th>Supplier </th>
                                            <th>Net Total </th>
                                            <th>Paid Total </th>
                                            <th>Balance Total </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Inv No</th>
                                            <th>Date </th>
                                            <th>Supplier </th>
                                            <th>Net Total </th>
                                            <th>Paid Total </th>
                                            <th>Balance Total </th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var lst in Model)
                                        {
                                        <tr>
                                            <td>
                                                <label class="badge badge-inverse-default"> @lst.Invid</label>

                                            </td>
                                            <td>
                                                @Convert.ToDateTime(lst.Date).ToString("dd MMM yyyy")

                                            </td>
                                            <td>
                                                @lst.Name

                                            </td>
                                            <td>
                                                @lst.NetAmount.ToString("#,##0")

                                            </td>
                                            <td>
                                                @lst.Ptotal.ToString("#,##0")

                                            </td>


                                            @if (lst.NetAmount == lst.Ptotal)
                                            {
                                                <td>
                                                    <label class="label label-lg label-success" style="font-size: 15px"> @lst.BTotal.ToString("#,##0")</label>

                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    <label class="label label-lg label-danger" style="font-size: 15px"> @lst.BTotal.ToString("#,##0")</label>

                                                </td>
                                            }
                                           
                                            <td>
                                                <a href="@Url.Action("Edit", new { Invid = lst.Invid })" new { onclick="return confirm('Are you sure you want to Edit this Invoice?');" class="badge badge-primary" data-toggle="tooltip" data-placement="left" title="Click Me To Edit"><i class="fa fa-pencil"></i></a>
                                                <a href="@Url.Action("Print", new {   Invid = lst.Invid  })" target="_blank" class="badge badge-warning" data-toggle="tooltip" data-placement="left" title="Click Me To Print"><i class="ion-printer"></i> </a>
                                            </td>
                                        </tr>

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () {
        $('#mydiv').fadeOut('fast');
    }, 3000); // <-- time in milliseconds
</script>





















